{
  "name": "tower-blocks",
  "description": "Tower Blocks Game",
  "version": "1.0.0",
  "author": "DavidJones <qowera@qq.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:DavidKk/tower-blocks.git"
  },
  "pre-commit": [
    "lint-staged"
  ],
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint",
      "git add"
    ]
  },
  "scripts": {
    "lint-staged": "lint-staged",
    "tslint": "tslint --config ./tslint.json --fix './src/**/*.ts'",
    "lint": "npm run tslint",
    "test": "npm run lint",
    "compile:shell": "tsc --outDir ./shell ./src/shell/*.ts",
    "wx:develop": "concurrently \"npm run compile:shell && node ./shell/parcel-wx --watch\" \"parcel ./src/game.ts --out-dir app --no-cache --no-source-maps --no-hmr\"",
    "wx:release": "concurrently \"npm run compile:shell && node ./shell/parcel-wx\" \"parcel build ./src/game.ts --out-dir app --no-cache --no-source-maps\"",
    "develop": "rimraf ./dist ./.cache && parcel ./src/index.html --no-hmr",
    "release": "rimraf ./dist ./.cache && parcel build ./src/index.html --public-url /tower-blocks/",
    "start": "npm run develop"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/chokidar": "^2.1.3",
    "@types/fs-extra": "^5.0.5",
    "@types/node": "^11.10.5",
    "autoprefixer": "^9.5.0",
    "chalk": "^2.4.2",
    "chokidar": "^2.1.2",
    "concurrently": "^4.1.0",
    "fs-extra": "^7.0.1",
    "lint-staged": "^7.2.2",
    "parcel-bundler": "^1.11.0",
    "postcss-pxtorem": "^4.0.1",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.3",
    "sass": "^1.16.0",
    "tslint": "^5.12.1",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "@types/lodash": "^4.14.121",
    "@types/stats.js": "^0.17.0",
    "@types/three": "^0.93.22",
    "stats.js": "^0.17.0",
    "three": "^0.102.0"
  }
}
